[Game Configuration]

### SECTION INDEX ###
#   SERVER SETTINGS
#   MYSQL SETTINGS
# 	WEB SETTINGS
#   PLAYER SETTINGS
# 	MAP SETTINGS
# 	MOB SETTINGS

### SERVER SETTINGS ###

## Game Port
#   Description: TCP port to reach the server.
#   Default: 5152
GamePort = 5152

## BindIP
#	Description: Bind server to Ip/Host Name
#	Default: "0.0.0.0" - (Bind to all IPs on the system)
BindIP = "0.0.0.0"

## Child Listeners
#	Description: Amount of Child Listeners to spawn
#	Default: 1
ChildListeners = 1

### MYSQL SETTINGS ###

## GameDatabase
#	Description: Mysql account settings to connect to Game Database
#	Example:     "hostname;port;username;password;database"
#   Default:     "127.0.0.1;3306;SteerStone;SteerStone;SteerStone"
GameDatabaseInfo = "127.0.0.1;3306;SteerStone;SteerStone;SteerStone"

## Database Worker Threads
# 	Description: Amount of Worker Threads to spawn
# 	Default: 1
GameWorkerThreads = 1

## MySQL Instances
#	Description: Amount of MySQL instances to spawn
#   Default:     5 (max 5)
MySQLInstances = 5

### WEB SETTINGS ###

## Enable CMS -> Server Communication
#	Description: Enable CMS and Server to communicate with each other
#   Default:     1 - Enabled
#				 0 - Disabled
WebEnabled = 1

## Web Secret Key
#	Description: The secret key the Web sends to verifiy the Web request is valid (prevents a random person sending unauthorized web requests).
#   Default:     "RANDOM_SECRET_KEY"
WebSecretKey = "RANDOM_SECRET_KEY"

### PLAYER SETTINGS ###

## Log Out Timer
# 	Description: Logout timer
# 	Default: 20000 (in milliseconds)
LogOutTimer = 20000

## Premium Log Out Timer
# 	Description: Premium Logout timer
# 	Default: 5000 (in milliseconds)
PremiumLogOutTimer = 5000

## Attack Range
#	Description: The maximum attack range
# 	Default: 1400
PlayerAttackRange = 1400

### MAP SETTINGS ###

## Map Threads
##	Description: Amount of map threads to spawn
#	Default: 3 (Max 29)
MapThreads = 3

## Map Update Interval
##	Description: How often to update map (in milliseconds)
#	Default: 0 (Update with World)
MapUpdateInterval = 0

## Check For Player
##	Description: Check if player exists in a grid (in milliseconds)
#	Default: 60000
CheckForPlayer = 60000

## Check For Interactive Events
##	Description: Check if player is near interactive event (in milliseconds)
#	Default: 5000
CheckForInteractiveEvents = 5000

## Jump Delay
##	Description: Jump delay when changing maps
#	Default: 2000 (same as official servers)
JumpDelay = 2000

## Delay Removal
##	Description: Timer when to remove Object(s) from client
#	Default: 5000
DelayRemoval = 5000

## PlayerSaveInterval
## 	Description: Time (in milliseconds) for player save interval.
#  	Default:     900000 - (15 min)
PlayerSaveInterval = 900000

### MOB SETTINGS ###

## Attack Range
#	Description: The maximum attack range
# 	Default: 730
MobAttackRange = 730

## Min Follow Distance
#	Description: Min follow distance
# 	Default: 200
MinFollowDistance = 200

## Max Follow Distance
#	Description: Max follow distance
# 	Default: 4000
MaxFollowDistance = 4000

## Max Roaming Distance
#	Description: Max Roaming Distance
# 	Default: 200
MaxRoamingDistance = 200

## Find Player Distance (radius)
#	Description: Max distance for searching player(s)
# 	Default: 800
FindPlayerDistance = 800

## Distance away from player
#	Description: Gap Distance when following player
# 	Default: 100
DistanceAwayFromPlayer = 100