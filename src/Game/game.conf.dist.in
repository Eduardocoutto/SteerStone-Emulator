[Game Configuration]

### SECTION INDEX ###
#   SERVER SETTINGS
#   MYSQL SETTINGS
# 	MAP SETTINGS

### SERVER SETTINGS ###

## Game Port
#   Description: TCP port to reach the server.
#   Default: 37120
GamePort = 37120

## BindIP
#	Description: Bind server to Ip/Host Name
#	Default: "127.0.0.1" - (Bind to all IPs on the system)
BindIP = "127.0.0.1"

## Child Listeners
#	Description: Amount of Child Listeners to spawn
#	Default: 1
ChildListeners = 1

### MYSQL SETTINGS ###

## GameDatabase
#	Description: Mysql account settings to connect to Game Database
#	Example:     "hostname;port;username;password;database"
#   Default:     "127.0.0.1;3306;SteerStone;SteerStone;SteerStone"
GameDatabaseInfo = "127.0.0.1;3306;SteerStone;SteerStone;SteerStone"

## Database Worker Threads
# 	Description: Amount of Worker Threads to spawn
# 	Default: 1
GameWorkerThreads = 1

## MySQL Instances
#	Description: Amount of MySQL instances to spawn
#   Default:     5 (max 5)
MySQLInstances = 5

### MAP SETTINGS ###

## Map Threads
##	Description: Amount of map threads to spawn
#	Default: 1 (Max 29)
MapThreads = 1

## Map Update Interval
##	Description: How often to update map (in milliseconds)
#	Default: 0 (Update with World)
MapUpdateInterval = 0

## Check For Player
##	Description: Check if player exists in a grid (in milliseconds)
#	Default: 60000
CheckForPlayer = 60000

